{
  "extends": ["./path/to/base/tsconfig.base.json", "./path/to/another/base/tsconfig.extra.json"],
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

